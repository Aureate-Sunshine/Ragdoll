{
  "name": "ragdoll-yapi",
  "displayName": "Ragdoll-Yapi",
  "description": "a YAPI extention for Visual Studio Code",
  "version": "0.1.1",
  "publisher": "cyan-speed",
  "engines": {
    "vscode": "^1.45.0"
  },
  "keywords": [
    "TypeScript",
    "YAPI"
  ],
  "icon": "media/logo.jpg",
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "activationEvents": [
    "onView:yapiView",
    "onCommand:ragdoll.login",
    "onCommand:ragdoll.refresh",
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Aureate-Sunshine/Ragdoll"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ragdoll.refresh",
        "title": "Refresh",
        "category": "ragdoll",
        "icon": {
          "light": "media/light/refresh.svg",
          "dark": "media/dark/refresh.svg"
        }
      },
      {
        "command": "ragdoll.generateTableColumns",
        "title": "Generate Table Columns",
        "category": "ragdoll"
      },
      {
        "command": "ragdoll.generateSearchItems",
        "title": "Generate Search Items",
        "category": "ragdoll"
      },
      {
        "command": "ragdoll.login",
        "title": "Login",
        "category": "ragdoll",
        "icon": {
          "light": "media/light/login.svg",
          "dark": "media/dark/login.svg"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "ragdoll.generateTableColumns",
          "group": "editor"
        },
        {
          "when": "editorFocus",
          "command": "ragdoll.generateSearchItems",
          "group": "editor"
        }
      ],
      "view/title": [
        {
          "command": "ragdoll.login",
          "when": "view == yapiView",
          "group": "navigation@1"
        },
        {
          "command": "ragdoll.refresh",
          "when": "view == yapiView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "ragdoll.openInBrowser",
          "when": "viewItem == APINode && api-platform == 'Yapi'",
          "group": "inline@2"
        }
      ]
    },
    "views": {
      "yapiView": [
        {
          "id": "yapiView",
          "name": "Ragdool-Yapi"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yapiView",
          "title": "YAPI",
          "icon": "media/yapiView.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "yapiView",
        "contents": "loading..."
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ragdoll-Yapi",
      "properties": {
        "ragdoll-yapi.yapi.ldapLogin": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "通过 LDAP 账号登录"
        },
        "ragdoll-yapi.yapi.email": {
          "default": "",
          "type": "string",
          "markdownDescription": "登录用户名"
        },
        "ragdoll-yapi.yapi.password": {
          "default": "",
          "type": "string",
          "markdownDescription": "登录密码"
        },
        "ragdoll-yapi.yapi.url": {
          "default": "",
          "type": "string",
          "markdownDescription": "Yapi项目地址"
        },
        "ragdoll-yapi.yapi.pid": {
          "default": "",
          "type": "string",
          "markdownDescription": "Yapi项目ID"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/glob": "^7.1.3",
    "@types/markdown-it": "^12.0.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "ts-loader": "^7.0.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@types/ejs": "^3.0.4",
    "@types/prettier": "^2.0.1",
    "axios": "^0.21.1",
    "fs-extra": "^9.0.1",
    "markdown-it": "^12.0.4",
    "dayjs": "^1.8.28",
    "prettier": "^2.2.1",
    "ejs": "^3.1.3",
    "json-schema-to-typescript": "^9.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,less,md,json}": [
      "npx prettier --write ./src",
      "git add ."
    ]
  }
}
